@using VotingWeb.Properties
@using VotingWeb.Areas.Admin.Models.Deputies
@model UpdateModel

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.IsCreate)
    @Html.HiddenFor(model => model.MunicipalityId)
    <div class="form-group">
        @Html.LabelFor(model => model.Firstname)
        @Html.TextBoxFor(model => model.Firstname, new { @class = "form-control form-control-lg" })
        @Html.ValidationMessageFor(model => model.Firstname)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Lastname)
        @Html.TextBoxFor(model => model.Lastname, new { @class = "form-control form-control-lg" })
        @Html.ValidationMessageFor(model => model.Lastname)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TitlePre)
        @Html.TextBoxFor(model => model.TitlePre, new { @class = "form-control form-control-lg" })
        @Html.ValidationMessageFor(model => model.TitlePre)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TitlePost)
        @Html.TextBoxFor(model => model.TitlePost, new { @class = "form-control form-control-lg" })
        @Html.ValidationMessageFor(model => model.TitlePost)
    </div>
    <div class="btn-group" role="group" aria-label="...">
        <button type="submit" class="btn btn-primary">@AdminRes.BUTTON_SAVE</button>
    </div>
}
