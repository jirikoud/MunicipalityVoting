@page
@model PersonalDataModel
@{
    ViewData["Title"] = AccountRes.PERSONAL_DATA_TITLE;
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>@AccountRes.PERSONAL_DATA_HEADER</p>
        <p>
            <strong>@AccountRes.PERSONAL_DATA_WARNING</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">@AccountRes.BUTTON_PERSONAL_DATA_DOWNLOAD</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-primary">@AccountRes.BUTTON_PERSONAL_DATA_DELETE</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}