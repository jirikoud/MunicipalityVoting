@page
@model VotingCoreWeb.Areas.Admin.Pages.Body.IndexModel
@{
    ViewData["Title"] = BodyAdminRes.PAGE_TITLE;
    ViewData["MenuItem"] = CommonRes.MENU_ITEM_ADMIN_BODIES;
}

<div id="content">
    <div class="float-right">
        <a asp-area="Admin" asp-page="/Body/Create" asp-route-municipalityId="@Model.MunicipalityId" class="btn btn-success">@BodyAdminRes.BUTTON_CREATE</a>
    </div>
    <h1>@BodyAdminRes.TABLE_TITLE</h1>
    <div class="grid-view">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">@BodyAdminRes.COLUMN_NAME</th>
                    <th scope="col"></th>
                    <th scope="col">@CommonRes.COLUMN_ACTION</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ItemList)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td><a asp-page="/Session/Index" asp-route-id="@item.Id" class="btn btn-info">@BodyAdminRes.BUTTON_SESSIONS</a></td>
                        <td>
                            <a asp-page="/Body/Update" asp-route-id="@item.Id" class="btn btn-primary">@AdminRes.BUTTON_UPDATE</a>
                            <a asp-page="/Body/Delete" asp-route-id="@item.Id" class="btn btn-danger">@AdminRes.BUTTON_DELETE</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
