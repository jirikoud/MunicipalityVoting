@page
@model VotingCoreWeb.Areas.Admin.Pages.Deputy.IndexModel
@{
    ViewData["Title"] = DeputyAdminRes.PAGE_TITLE;
    ViewData["MenuItem"] = CommonRes.MENU_ITEM_ADMIN_DEPUTY;
}

<div id="content">
    <div class="float-right">
        <a asp-area="Admin" asp-page="/Deputy/Create" asp-route-municipalityId="@Model.MunicipalityId" class="btn btn-success">@DeputyAdminRes.BUTTON_CREATE</a>
    </div>
    <h1>@DeputyAdminRes.TABLE_TITLE</h1>
    <div class="grid-view">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">@DeputyAdminRes.COLUMN_FIRSTNAME</th>
                    <th scope="col">@DeputyAdminRes.COLUMN_LASTNAME</th>
                    <th scope="col">@DeputyAdminRes.COLUMN_PARTY</th>
                    <th scope="col">@CommonRes.COLUMN_ACTION</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ItemList)
                {
                    <tr>
                        <td>@item.Firstname</td>
                        <td>@item.Lastname</td>
                        <td>@item.Party?.Name</td>
                        <td>
                            <a asp-page="/Deputy/Update" asp-route-id="@item.Id" class="btn btn-primary">@AdminRes.BUTTON_UPDATE</a>
                            <a asp-page="/Deputy/Delete" asp-route-id="@item.Id" class="btn btn-danger">@AdminRes.BUTTON_DELETE</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
