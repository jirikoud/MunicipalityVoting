@page
@model VotingCoreWeb.MunicipalityModel
@{
    ViewData["Title"] = Model.MunicipalityName;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Index">@VotingRes.TITLE_HOME</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.MunicipalityName</li>
    </ol>
</nav>
<div class="row">
    <div class="col">
        <h1>@Model.MunicipalityName</h1>
    </div>
</div>
<div class="row">
    <div class="col">
        <h3>@VotingRes.HEADER_SESSION_LIST</h3>
        <div class="list-group">
            @foreach (var body in Model.BodyList)
            {
                <a asp-page="Body" asp-route-id="@body.Id" class="list-group-item list-group-item-action flex-column align-items-start" data-toggle="tooltip" data-placement="top" title="@body.Name">
                    <h3 class="text-truncate">@body.Name</h3>
                    <p>@body.Description</p>
                </a>
            }
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        });
    </script>
}
